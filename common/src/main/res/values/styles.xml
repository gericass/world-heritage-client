<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_EditTextStyle">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/common_blue</item>
        <item name="android:textCursorDrawable">@color/common_blue</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHighlight">@android:color/darker_gray</item>
    </style>

    <style name="common_NoPaddingStyle">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="common_PaddingStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="common_CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/common_gray</item>
    </style>

    <style name="common_AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/common_blue</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@color/common_gray_dark</item>
    </style>
</resources>